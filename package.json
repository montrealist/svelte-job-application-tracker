{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "css": "tachyons src/css/app.css > src/tachyons.css",
    "css-prod": "tachyons src/css/app.css > src/tachyons.css --minify",
    "test": "jest --no-cache"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/?!(svelte-routing)"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-transform-dynamic-import": "^2.1.0",
    "jest": "^26.0.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "latest",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
    "svelte-jester": "^1.0.6"
  },
  "dependencies": {
    "dexie": "^3.0.1",
    "sirv-cli": "^0.4.4",
    "svelte-routing": "^1.4.2",
    "tachyons": "latest",
    "tachyons-cli": "latest"
  }
}
